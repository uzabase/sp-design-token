{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "../styles/",
      "files": [
        {
          "destination": "speeda-tokens.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "../styles/",
      "files": [{
        "destination": "speeda-tokens.scss",
        "format": "scss/variables"
      }]
    }
  }
}
